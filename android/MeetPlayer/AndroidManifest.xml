<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pplive.meetplayer"
    android:versionCode="232"
    android:versionName="2.3.2" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />

    <!-- Access to Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- MODIFY_AUDIO_SETTINGS is needed to use audio effects such as environmental reverb -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
	
	<uses-permission android:name="android.permission.RECORD_AUDIO" /> 
	
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>  
	<uses-permission android:name="android.permission.CHANGE_WIFI_STATE"></uses-permission>  
	<uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>  

    <application
        android:name="com.pplive.meetplayer.MeetApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:allowBackup="true" >
        
        <!-- Activities -->
        <activity
            android:name=".ui.ClipListActivity"
            android:label="@string/app_name"
			android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
			android:name=".ui.FragmentMp4PlayerActivity" 
			android:screenOrientation="landscape"
            android:label="@string/app_name" >
		</activity>
		<activity
			android:name=".ui.PlaySohuActivity" 
			android:screenOrientation="landscape"
            android:label="@string/app_name" >
		</activity>
		<activity
			android:name=".ui.SohuVideoActivity" 
			android:screenOrientation="portrait"
            android:label="@string/title_activity_sohu_video" >
		</activity>
		<activity
			android:name=".ui.SohuEpisodeActivity" 
			android:screenOrientation="portrait"
            android:label="@string/title_activity_sohu_video" >
		</activity>
		<activity
			android:name=".ui.PPTVVideoActivity" 
			android:screenOrientation="portrait"
            android:label="@string/title_activity_pptv_video" >
		</activity>
		<activity
			android:name=".ui.PPTVEpisodeActivity" 
			android:screenOrientation="portrait"
            android:label="@string/title_activity_pptv_video" >
		</activity>
		<activity
			android:name=".ui.PPTVPlayerActivity" 
			android:label="@string/app_name"
			android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
		</activity>
		<activity
			android:name=".ui.MeetViewActivity" 
			android:configChanges="keyboardHidden|orientation|screenSize"
			android:screenOrientation="portrait"
            android:label="@string/app_name" >
		</activity>
        <activity
            android:name=".ui.VideoPlayerActivity"
            android:label="@string/app_name"
            android:process=":Player"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:mimeType="video/*" android:scheme="file" />
                <data android:mimeType="video/*" android:scheme="content" />
                <data android:mimeType="video/*" android:scheme="rtsp" />
                <data android:mimeType="video/*" android:scheme="http" />
                <data android:mimeType="video/*" android:scheme="pplive2" />
                <data android:mimeType="video/*" android:scheme="ppvod" />
                
                <data android:mimeType="audio/*" android:scheme="file" />
                <data android:mimeType="audio/*" android:scheme="content" />
                <data android:mimeType="audio/*" android:scheme="rtsp" />
                <data android:mimeType="audio/*" android:scheme="http" />
                
                <data android:mimeType="application/octet-stream" android:scheme="file" />
				<data android:mimeType="application/octet-stream" android:scheme="http" />
            </intent-filter>
        </activity>
        
        <!-- Services -->
        <service 
            android:name=".service.DLNAService" >
			<intent-filter >
                <action android:name="com.pplive.meetplayer.DLNAService" />
			</intent-filter>
        </service>
        <service 
            android:name=".service.MyHttpService" >
			<intent-filter >
                <action android:name="com.pplive.meetplayer.MyHttpService" />
			</intent-filter>
        </service>
        
    </application>
</manifest>