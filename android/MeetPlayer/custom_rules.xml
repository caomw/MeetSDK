<?xml version="1.0" encoding="UTF-8"?>
<project name="custom_rules2" default="debug">
	<!-- rename output jar-->
	<!--property name="out.library.jar.file" location="${out.absolute.dir}/${ant.project.name}.jar" /-->
	
	<property name="SdkName" value="meet_sdk" />
	
	<property name="libs.dir" location="libs" />
	
	<property name="output.dir" location="../meetsdk/output" />
	
	<target name="quick" >
		<exec executable="quick.bat" failonerror="true"> 
			<arg value="quick" /> 
		</exec> 
		<copy 
			file="${output.dir}/MeetSDK.jar" 
			tofile="${libs.dir}/MeetSDK.jar" 
			filtering="true" 
			overwrite="true" 
			failonerror="true" >
		</copy>
		<copy todir="${libs.dir}/armeabi" overwrite="true" verbose="true" failonerror="true" >
			<fileset dir="${output.dir}/libs/armeabi">
				<filename name="*.so" />
			</fileset>
		</copy>
	</target>
	
	<target name="normal">
		<exec executable="quick.bat" failonerror="true"> 
			<arg value="normal" /> 
		</exec> 
		<delete file="${libs.dir}/MeetSDK.jar" />
		<delete file="${libs.dir}/armeabi/libmeet.so" />
		<delete file="${libs.dir}/armeabi/libplayer_neon.so" />
		<delete file="${libs.dir}/armeabi/libsubtitle-jni.so" />
	</target>
	
</project>